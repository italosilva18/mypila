# ===========================================
# MYPILA - Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# NEVER commit .env to version control!

# ===========================================
# ENVIRONMENT
# ===========================================
# Options: development, staging, production
GO_ENV=development

# ===========================================
# DATABASE - MongoDB
# ===========================================
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password_here_min_32_chars

# ===========================================
# SECURITY - JWT
# ===========================================
# REQUIRED in production! Must be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_at_least_32_characters

# ===========================================
# CORS - Allowed Origins
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3333,http://localhost:5173

# ===========================================
# SERVER
# ===========================================
PORT=8080
LOG_LEVEL=info

# ===========================================
# FRONTEND
# ===========================================
VITE_API_URL=http://localhost:8081/api

# ===========================================
# DOCKER
# ===========================================
VERSION=dev
